#timeline
	margin 0 auto
	max-width 80rem

	.timeline__intro
		margin 0 auto
		margin-top 2rem
		padding 1rem
		max-width $column-width

	.intro__hed
		margin 0
		font-family $sans-display
		set-type-size(xxx-large, false)
		text-align center

	.intro__dek
		margin 0

	.author__figure
		margin 2rem auto
		max-height 350px
		&.vertical
			min-height 450px

	.g-axis
		path
			display none

	.author__info
		margin 0 auto
		margin-top 2rem
		padding 1rem
		max-width $column-width
		text-align center

	.info__name
		margin 0
		font-family $sans-display
		set-type-size(xx-large, false)

	.info__lifespan
		margin 0
		color $gray-dark
		font-family $sans-display

	.author__text
		margin 0 auto
		padding 1rem
		max-width $column-width

	rect.author__location
		fill $secondary
		stroke-width 2px
		stroke $fg
		opacity 1
		&.match
			fill $red
		&.is-dimmed 
			opacity 0.5

	path.connection__lived
		fill none
		stroke-width 2px
		stroke $fg
		opacity 1
		&.is-hidden
			opacity 0
		&.is-dimmed 
			opacity 0.2

	.book 
		cursor pointer
		&__never 
			fill $red
			pointer-events none

	.group__never 
		opacity 1
		&.is-hidden 
			opacity 0

	.cities__lived
		opacity 1
		&.is-hidden 
			opacity 0

	.figure__tooltip
		border 2px solid $fg
		background $bg
		color $fg
		font-family $sans-display
		pointer-events none
		max-width $column-width
		margin 0 auto
		min-height 160px
		padding 0.5rem 1rem


		p
			margin 0
			set-type-size(small)

		span
			font-weight bold
	