#distance
	position relative
	margin 0 auto
	max-width 80rem

	article
		position relative
		margin 0 auto
		max-width $column-width

	.step
		margin 0 auto
		margin-bottom 1rem
		min-height 320px
		opacity 0.5
		transition opacity 250ms ease-in-out

		&:last-of-type
			margin-bottom 0

		&.is-active
			opacity 1

		p
			margin 0
			padding 1rem
			set-type-size(large)
			border 2px solid $fg
			background-color rgba($bg, 0.9)

	figure
		position sticky
		top 0
		left 0
		z-index 0
		margin 0
		min-height 480px
		width 100%
		transform translate3d(0, 0, 0)

	.arc path
		fill none
		stroke $fg
		stroke-width 2px

	.hist rect
		stroke $fg
		stroke-width 2px
		fill $secondary

		&.is-highlight
			fill $primary

	.g-axis
		path
			display none